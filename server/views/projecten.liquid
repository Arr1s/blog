{% layout "server/layouts/base.liquid" %}

{% block content %}
  <div class="blog-wrapper">
    <div class="blog-content">
      <h1>{{ title }}</h1>

      <ul>
        {% for vak in vakken %}
          <li>
            <h2>{{ vak.name }}</h2>
            <p>{{ vak.description }}</p>
            <p>{{ vak.reflection }}</p>
          </li>
        {% endfor %}
      </ul>
    
    </div>
  </div>
{% endblock %}
